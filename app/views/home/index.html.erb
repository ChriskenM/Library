<h1>Library Books</h1>

<% if current_user %>
  <ul>
    <% Book.all.each do |book| %>
      <li>
        <%= link_to book.title, book_path(book) %> by <%= book.author %>
        <% if book.borrowings.exists? %>
          <span>(Currently Borrowed)</span>
        <% else %>
          <span>(Available)</span>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Please sign in to view available books.</p>
<% end %>
