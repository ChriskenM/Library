<h1>My Borrowed Books</h1>

<% if current_user %>
  <ul>
    <% current_user.borrowings.each do |borrowing| %>
      <li>
        <%= borrowing.book.title %> (Due: <%= borrowing.due_date %>)
        <%= button_to "Return", borrowing_path(borrowing), method: :delete %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You need to be signed in to view your borrowed books.</p>
<% end %>