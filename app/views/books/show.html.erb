<h1><%= @book.title %></h1>
<p>Author: <%= @book.author %></p>
<p>ISBN: <%= @book.isbn %></p>

<% if @book.borrowings.exists? %>
  <p><strong>This book is currently borrowed.</strong></p>
<% else %>
  <%= form_with(url: borrowings_path(book_id: @book.id), method: :post) do %>
    <%= submit_tag "Borrow this Book" %>
  <% end %>
<% end %>

<%= link_to "Back to Books", books_path %>
